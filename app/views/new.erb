<h1>Create a New Recipe!</h1>

<form method="post" action="/recipes">
    <label for = "name">Name</label>
    <input type="text" name="name" id="name" placeholder="Name your recipe">
    
    <label for = "ingredients">Ingredients</label>
    <input type="text" name="ingredients" id="ingredients" placeholder="salt, pepper, olive oil, basil">
    
    <label for = "cook_time">Cook Time</label>
    <input type="text" name="cook_time" id="cook_time" placeholder="Minutes (2hrs = 120)">
    
    <input type="submit" value="Create your recipe!">
</form>