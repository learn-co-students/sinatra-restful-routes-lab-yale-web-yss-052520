<h1>Update Your Recipe</h1>

<p>Current Ingredient List: <%= @recipe.ingredients%></p>

<form method="post" action="/recipes/<%= @recipe.id %>">
    <input type="hidden" name="_method" value="patch">
    
    <label for = "name">Name</label>
    <input type="text" name="recipe[name]" id="name" value="<%= @recipe.name %>">
    
    <label for = "ingredients">Ingredients</label>
    <input type="text" name="recipe[ingredients]" id="ingredients" value="<%= @recipe.ingredients %>">
    
    <label for = "cook_time">Cook Time</label>
    <input type="text" name="recipe[cook_time]" id="cook_time" value="<%= @recipe.cook_time %>">
    
    <input type="submit" value="Update Recipe">
</form>